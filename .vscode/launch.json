    "version": "0.2.0",
    "configurations": [
        {
            "name": "(gdb) Launch",
            "preLaunchTask": "build",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/tjexample.exe",
            // "args": ["../yuv_320_240.yuv", "320", "240"],
            "args": ["../yuv_8x8.yuv", "8", "8"],
            // "args": ["testimages/nightshot_iso_100.bmp", "testimages/nightshot.jpg"],
            
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ]
        }
    ]
}
